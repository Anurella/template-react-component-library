{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "rootDir": "src",
    "declarationDir": "dist",
    "lib": ["es6", "dom", "es2016", "es2017"],


    "jsx": "react",
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "rollup.config.js"
  ]
}